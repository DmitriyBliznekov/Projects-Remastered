<Application x:Class="Project.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project" StartupUri="View/MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             ShutdownMode="OnExplicitShutdown"
             xmlns:helpers="clr-namespace:Project.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:Project.ViewModel" />
            <helpers:MessageListener x:Key="MessageListener"  />
        </ResourceDictionary>
    </Application.Resources>
</Application>